<Window x:Class="TarkovBuddy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TarkovBuddy"
        mc:Ignorable="d"
        Title="TarkovBuddy v1.0.0.0" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F0F0F0">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Background="#1E1E1E" Margin="10">
            <TextBlock Text="TarkovBuddy - Escape from Tarkov Assistant" 
                       Foreground="White" 
                       FontSize="16" 
                       FontWeight="Bold"/>
            <TextBlock Text="Status: Initializing..." 
                       Foreground="#CCCCCC" 
                       FontSize="12"
                       x:Name="StatusText"/>
        </StackPanel>

        <!-- Main Content Area -->
        <TabControl Grid.Row="1" Margin="10">
            <TabItem Header="Dashboard">
                <Grid Background="White">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Welcome to TarkovBuddy" 
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,20"/>
                        <TextBlock Text="Phase 1: Foundation &amp; Core Infrastructure" 
                                   FontSize="14"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="Status: Ready to start game state monitoring" 
                                   FontSize="12"
                                   Foreground="#666666"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Configuration">
                <Grid Background="White" Margin="10">
                    <StackPanel>
                        <TextBlock Text="Application Settings" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Text="Configuration service is active and loading settings from app-settings.json" 
                                   TextWrapping="Wrap"
                                   Foreground="#666666"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Logs">
                <Grid Background="White">
                    <TextBlock Text="Log Viewer (To be implemented in Phase 8)" 
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Foreground="#999999"/>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Background="#E0E0E0" Padding="5">
            <StatusBarItem>
                <TextBlock Text="App State: " FontWeight="Bold"/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock x:Name="CurrentStateText" Text="InLauncher"/>
            </StatusBarItem>
            <Separator Margin="10,0"/>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="Ready" Foreground="Green" FontWeight="Bold"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
